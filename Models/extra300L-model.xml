<!-- Gouverne de direction -->
  <animation>
    <type>rotate</type>
    <object-name>direction</object-name>
    <property>surface-positions/rudder-pos-norm</property>    
    <factor>20</factor>  <!-- braquage +20° -20° -->
    <center>
      <x-m> 2.9527 </x-m>
      <y-m> 0.0006 </y-m>
      <z-m> 0.5507 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 0 </y>
      <z> 1 </z>
    </axis>
  </animation>



  <!-- Porte -->
  <animation>
    <type>pick</type>
    <object-name>porte</object-name>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>  
      <binding>
        <command>nasal</command>
        <script>doors.doorsystem.crewexport();</script>
      </binding>
    </action>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>porte</object-name>
    <property>instrumentation/doors/crew/position-norm</property>
    <factor> -140 </factor>
    <axis>
      <x1-m>  0.2046 </x1-m>
      <y1-m>  0.3333 </y1-m>
      <z1-m>  0.2336 </z1-m>
      <x1-m> -0.9579 </x1-m>
      <y2-m>  0.3906 </y2-m>
      <z2-m>  0.2345 </z2-m>
    </axis>
  </animation>

</PropertyList>
