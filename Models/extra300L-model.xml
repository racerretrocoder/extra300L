<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>
<nasal>
  <load>
    <!--
      ##############################################################################
      # The on-load Nasal is not executed when this file is loaded as the user
      # aircraft. The code is only executed if the file is loaded for a remote
      # aircraft in Multi-Player mode (MP)
      ##############################################################################
    -->
    <![CDATA[
      var livery_update = aircraft.livery_update.new("Aircraft/extra300L/Models/Liveries");
    ]]>
    </load>
  
  <unload><![CDATA[
    livery_update.stop();
  ]]></unload>
</nasal>


  <path>extra300L.ac</path>

<!-- Particules pour OSG -->
  <model>
    <path>Aircraft/extra300L/Models/Effects/Smoke/smoke.xml</path>
    <offsets>
      <x-m>  -2.1051 </x-m>
      <y-m>  0.0194 </y-m>
      <z-m> -0.5724 </z-m>
      <roll-deg>    0 </roll-deg>
      <pitch-deg>   0 </pitch-deg>
      <heading-deg> 0 </heading-deg>
    </offsets>
  </model>

   <!-- Interieur -->
  <model>
    <path>Aircraft/extra300L/Models/Interior/interior.xml</path>
    <offsets>
      <x-m> 0.0 </x-m>
      <y-m> 0.0 </y-m>
      <z-m> 0.0 </z-m>
      <roll-deg>    0.0 </roll-deg>
      <pitch-deg>   0.0 </pitch-deg>
      <heading-deg> 0.0 </heading-deg>
    </offsets>
  </model>

<effect>
       <inherits-from>Effects/model-transparent</inherits-from>
         <object-name>propdisc</object-name>
         <object-name>propblur</object-name>
 	     <object-name>verriere</object-name>
         <object-name>verriere-int</object-name>
     <condition>
       <property>sim/rendering/rembrandt/enabled</property>
     </condition>
   </effect> 

<effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <object-name>verriere</object-name>
    <object-name>verriere-int</object-name>
    <object-name>propblur</object-name>
    <object-name>propdisc</object-name>
  </effect>

<animation>
  <type>material</type>
  <object-name>fuselage</object-name>
  <object-name>Cube.005</object-name>
  <object-name>Cube.002</object-name>
  <object-name>aileronG</object-name>
  <object-name>aileronD</object-name>
  <object-name>ailes</object-name>
  <object-name>direction</object-name>
  <object-name>Cube</object-name>
  <object-name>Cylinder.002</object-name>
  <object-name>bol</object-name>

  <object-name>fuselage.003</object-name>
  <property-base>sim/model/livery</property-base>
  <texture-prop>texture</texture-prop>
  <texture>Liveries/Default.png</texture>
</animation>


<!-- L'hélice --> 
  <animation>
    <name>HeliceComplete</name>
    <object-name>helice</object-name>
    <object-name>bol</object-name>
    <object-name>propdisc</object-name>
    <object-name>propblur</object-name>
  </animation>

 <!-- Séléction de l'objet visible en fonction des rpm -->
  <animation>
    <type>select</type>
    <object-name>propdisc</object-name>
    <condition>
      <greater-than>
        <property>sim/multiplay/generic/float[7]</property>
        <value>650</value>
      </greater-than>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>propblur</object-name>
    <condition>
    <and>
      <greater-than>
        <property>sim/multiplay/generic/float[7]</property>
        <value>300.000</value>
      </greater-than>
      <less-than>
        <property>sim/multiplay/generic/float[7]</property>
        <value>650.001</value>
      </less-than>
    </and>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>helice</object-name>
    <condition>
      <less-than>
        <property>sim/multiplay/generic/float[7]</property>
	<value>650</value>
      </less-than>
    </condition>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>HeliceComplete</object-name>
    <property>sim/multiplay/generic/float[7]</property>
    <factor> 1 </factor>
    <center>
      <x-m> -3.2063 </x-m>
      <y-m>  0.0000 </y-m>
      <z-m>  0.1022 </z-m>
    </center>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>
 
  <!-- Animations des ailerons -->
  <animation>
    <type>rotate</type>
    <object-name>aileronG</object-name>
    <property>surface-positions/left-aileron-pos-norm</property>
    <factor> 15 </factor>
    <axis>
      <x1-m> -0.9438 </x1-m>
      <y1-m> -4.0147 </y1-m>
      <z1-m> -0.1492 </z1-m>
      <x2-m> -0.4201 </x2-m>
      <y2-m> -0.9196 </y2-m>
      <z2-m> -0.1555 </z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>aileronD</object-name>
    <property>surface-positions/right-aileron-pos-norm</property>
    <factor> -15 </factor>
    <axis>
      <x1-m> -0.9438 </x1-m>
      <y1-m>  4.0147 </y1-m>
      <z1-m> -0.1492 </z1-m>
      <x2-m> -0.4201 </x2-m>
      <y2-m>  0.9196 </y2-m>
      <z2-m> -0.1555 </z2-m>
    </axis>
  </animation>


  <!-- Gouverne de profondeur -->
  <animation>
    <type>rotate</type>
    <object-name>profondeurG</object-name>
    <property>surface-positions/elevator-pos-norm</property>
    <factor> 15 </factor>
    <axis>
      <x1-m>  2.6758 </x1-m>
      <y1-m> -1.5858 </y1-m>
      <z1-m>  0.3182 </z1-m>
      <x2-m>  2.6729 </x2-m>
      <y2-m> -0.1904 </y2-m>
      <z2-m>  0.3120 </z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>profondeurD</object-name>
    <property>surface-positions/elevator-pos-norm</property>
    <factor> -15 </factor>
    <axis>
      <x1-m>  2.6758 </x1-m>
      <y1-m>  1.5858 </y1-m>
      <z1-m>  0.3182 </z1-m>
      <x2-m>  2.6729 </x2-m>
      <y2-m>  0.1904 </y2-m>
      <z2-m>  0.3120 </z2-m>
    </axis>
  </animation>

