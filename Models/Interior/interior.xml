<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>interior.ac</path>
  
     <!-- Tableau de bord du pilote (à l'arrière)-->
  <model>
    <path>Aircraft/extra300L/Models/Interior/Panel2/panel2.xml</path>
    <offsets>
      <x-m> -0.345 </x-m>
      <y-m> 0.0 </y-m>
      <z-m> 0.206 </z-m>
      <roll-deg>    0.0 </roll-deg>
      <pitch-deg>   0.0 </pitch-deg>
      <heading-deg> 0.0 </heading-deg>
    </offsets>
  </model>
  
       <!-- Tableau de bord du copilote (à l'avant)-->
  <model>
    <path>Aircraft/extra300L/Models/Interior/Panel1/panel1.xml</path>
    <offsets>
      <x-m> -1.297 </x-m>
      <y-m> 0.0 </y-m>
      <z-m> 0.275 </z-m>
      <roll-deg>    0.0 </roll-deg>
      <pitch-deg>   0.0 </pitch-deg>
      <heading-deg> 0.0 </heading-deg>
    </offsets>
  </model>



 <animation>
  <type>rotate</type>
  <object-name>stick-rear</object-name>
  <property>/controls/flight/aileron</property>
  <factor>20</factor> <!-- The rotation in degrees... kinda -->

  <axis>
  <object-name>stickroll</object-name>
  </axis>
 </animation>
 <animation>
  <type>rotate</type>
  <object-name>stick-rear</object-name>
  <property>/controls/flight/elevator</property>
  <factor>14</factor> <!-- The rotation in degrees... kinda -->

  <axis>
  <object-name>stickpitch</object-name>
  </axis>
 </animation>
 <animation>
  <type>rotate</type>
  <object-name>throt</object-name>
  <property>/controls/engines/engine/throttle</property>
  <factor>50</factor> <!-- The rotation in degrees... kinda -->

  <axis>
  <object-name>throtaxis</object-name>
  </axis>
 </animation>

</PropertyList>
